<html>
    <head>
        <title>Inventory App</title>
        <script src="/main.js"></script>
    </head>
    <body>
        <button id="deletebtn" onclick=" window.location.href = '/deleteproduct'">Delete Products</button>
        <button id="updatebtn" onclick=" window.location.href = '/updateproduct'">Update a product</button>
        <button id="addprod" onclick=" window.location.href = '/addproduct'">Add a new product</button> 
        <table>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Quantity</td>
        </tr>

        <% for (var i=0; i<items.length ;i++) {%>
        <tr>
            <td><%= items[i].name %></td>
            <td><%= items[i].price %></td>
            <td><%= items[i].quantity %></td>
        </tr>
        <% } %>


       
        </table>
    </body>
</html>